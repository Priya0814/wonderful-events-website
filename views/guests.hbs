<body>
       {{#if displayAlert}}
            <div class="alert alert-primary" role="alert" style="padding: 15px; margin: 10px; background-color:{{alertColor}}; color: #F7EDE2;">
            {{alertMessage}}
            </div>
        {{/if}} 
    

    <div class="section">
        <div class="main-content subject-main-content" >

            <a href="/events" class="buttonsDesign edit-events-button">Back to Event</a>

            <h3>Guests</h3>

            {{#if showMeals}}
            <table>
                <tr>
                    <th colspan="3">Meal Options</th>
                </tr>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Vegan</th>
                </tr>
                {{#each allMeals}}
                <tr>
                    <td>{{this.MealId}}</td>
                    <td>{{this.Main}}</td>
                    <td>{{this.Drink}}</td>
                    <td>{{YesNoTrueFalse this.Vegan 'en'}}</td>
                </tr>
                {{/each}}
            </table>
            {{/if}}
        
            
            <form action="/guests" method="post" role ="form" class="formStyle" id="add-form">
                <legend>Add guest</legend>
                <label for="add-form-name">Guest Name:</label><br>
                <input type="text" name="guestName" id="add-form-name" required><br>
                <label for="meal-ID">Preferred Meal ID:</label><br>
                <input type="text" name="mealId" id="meal-ID" required>
                <br>
                <input type="hidden" name="_method" value="post">
                <button type="submit" class="buttonsDesign" id="guest-add-form-submit">Submit</button>
            </form>


            <form action="/guests" method="post" role ="form" class="formStyle" id="delete-guest-form">
                    <legend>Delete guest</legend>
                        <label for="delete-guest">Guest Name:</label><br>
                        <input type="text" name="guestName" id="delete-guest" required><br>
                    <br>
                    <input type="hidden" name="_method" value="delete" required>
                    <button type="submit" class="buttonsDesign" id="guest-delete-form-submit">Delete</button>
            </form>


            <form action="/guests" method="post" role ="form" class="formStyle" id="update-form" style="margin-bottom: 150px;">
                <legend>Update guest</legend>
                <label for="update-form-old-name">Current Guest Name:</label><br>
                <input type="text" name="oldName" id="update-form-old-name" required><br>
                <label for="update-form-newName">New Guest Name:</label><br>
                <input type="text" name="newName" id="update-form-newName" required>
                <br>
                <label for="update-form-meal-ID">New Preferred Meal ID:</label><br>
                <input type="text" name="newMealID" id="update-form-meal-ID" required><br>
                <br>
                <input type="hidden" name="_method" value="put">
                <button type="submit" class="buttonsDesign" id="update-form-submit">Submit</button>

            </form>
        </div>

        <div class="table-section">
            {{#if showVisitors}}
                <table class="subject-table">
                    <tr>
                        <th colspan="3">Guests for the event</th>
                    </tr>
                    <tr>
                        <th>Guest Id</th>
                        <th>Guest Name</th>
                        <th>Meal Id</th>
                    </tr>
                    {{#each guestList}}
                    <tr>
                        <td>{{this.GuestId}}</td>
                        <td>{{this.Name}}</td>
                        <td>{{this.MealId}}</td>
                    </tr>
                    {{/each}}
                </table>
                <br>
            {{/if}}
        </div>
    </div>

    {{#if isSignedIn}}
        <script type="text/javascript">
            let button = document.getElementById("sign-in-navbar");

            button.innerText = "Sign Out";
            button.href = "/signout";
        </script>
    {{/if}}
</body>